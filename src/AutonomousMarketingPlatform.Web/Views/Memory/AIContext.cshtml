@model AutonomousMarketingPlatform.Application.DTOs.MemoryContextForAI
@{
    ViewData["Title"] = "Contexto de Memoria para IA";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="alert alert-info">
            <h5><i class="fas fa-info-circle"></i> Información</h5>
            <p class="mb-0">
                Este es el contexto de memoria que el sistema utiliza cuando genera contenido con IA.
                Esta información se consulta automáticamente antes de cada generación para personalizar
                y mejorar el contenido según tus preferencias y aprendizajes previos.
            </p>
        </div>

        <!-- Resumen del Contexto -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-brain mr-2"></i>Resumen del Contexto
                </h3>
            </div>
            <div class="card-body">
                <pre class="bg-light p-3 border rounded" style="white-space: pre-wrap; font-family: 'Courier New', monospace;">@Model.SummarizedContext</pre>
            </div>
        </div>

        <!-- Preferencias del Usuario -->
        @if (Model.UserPreferences.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user-cog mr-2"></i>Preferencias del Usuario (@Model.UserPreferences.Count)
                    </h3>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var pref in Model.UserPreferences)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@pref.MemoryTypeDisplayName</h6>
                                    <small class="text-muted">Relevancia: @pref.RelevanceScore/10</small>
                                </div>
                                <p class="mb-1">@pref.Content</p>
                                @if (pref.Tags.Any())
                                {
                                    <div>
                                        @foreach (var tag in pref.Tags)
                                        {
                                            <span class="badge badge-secondary">@tag</span>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Conversaciones Recientes -->
        @if (Model.RecentConversations.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-comments mr-2"></i>Conversaciones Recientes (@Model.RecentConversations.Count)
                    </h3>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var conv in Model.RecentConversations)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Conversación</h6>
                                    <small class="text-muted">@conv.MemoryDate.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                                <p class="mb-1">@conv.Content</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Memorias de Campaña -->
        @if (Model.CampaignMemories.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-bullhorn mr-2"></i>Memorias de Campaña (@Model.CampaignMemories.Count)
                    </h3>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var mem in Model.CampaignMemories)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@mem.MemoryTypeDisplayName</h6>
                                    <small class="text-muted">Relevancia: @mem.RelevanceScore/10</small>
                                </div>
                                <p class="mb-1">@mem.Content</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Aprendizajes -->
        @if (Model.Learnings.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-graduation-cap mr-2"></i>Aprendizajes del Sistema (@Model.Learnings.Count)
                    </h3>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var learning in Model.Learnings)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@learning.MemoryTypeDisplayName</h6>
                                    <small class="text-muted">Relevancia: @learning.RelevanceScore/10</small>
                                </div>
                                <p class="mb-1">@learning.Content</p>
                                @if (learning.Tags.Any())
                                {
                                    <div>
                                        @foreach (var tag in learning.Tags)
                                        {
                                            <span class="badge badge-info">@tag</span>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        @if (!Model.UserPreferences.Any() && !Model.RecentConversations.Any() && 
             !Model.CampaignMemories.Any() && !Model.Learnings.Any())
        {
            <div class="card">
                <div class="card-body text-center text-muted py-5">
                    <i class="fas fa-brain fa-3x mb-3"></i>
                    <p>No hay contexto de memoria disponible aún.</p>
                    <p class="small">El contexto se construye automáticamente a medida que usas el sistema.</p>
                </div>
            </div>
        }
    </div>
</section>

