@model List<AutonomousMarketingPlatform.Application.DTOs.MarketingMemoryDto>
@{
    ViewData["Title"] = "Memoria de Marketing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <div class="float-right">
                    <a href="/Memory/AIContext" class="btn btn-info btn-sm">
                        <i class="fas fa-brain"></i> Ver Contexto para IA
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Información sobre Memoria -->
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-info-circle mr-2"></i>¿Qué es la Memoria de Marketing?
                </h3>
            </div>
            <div class="card-body">
                <p>
                    La memoria de marketing permite que el sistema "recuerde" contexto, preferencias, conversaciones y aprendizajes 
                    para mejorar continuamente la generación de contenido con IA.
                </p>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <h5><i class="fas fa-check text-success mr-2"></i>Qué se guarda:</h5>
                        <ul>
                            <li>Preferencias de estilo y contenido</li>
                            <li>Conversaciones sobre campañas</li>
                            <li>Decisiones tomadas</li>
                            <li>Aprendizajes del sistema</li>
                            <li>Feedback sobre contenido generado</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-times text-danger mr-2"></i>Qué NO se guarda:</h5>
                        <ul>
                            <li>Datos personales sensibles</li>
                            <li>Credenciales o contraseñas</li>
                            <li>Información financiera detallada</li>
                            <li>Datos sin consentimiento</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filtros -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Filtros</h3>
            </div>
            <div class="card-body">
                <form method="get" action="/Memory">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="type">Tipo de Memoria</label>
                                <select class="form-control" id="type" name="type">
                                    <option value="">Todos los tipos</option>
                                    @foreach (var memoryType in ViewBag.MemoryTypes as string[])
                                    {
                                        <option value="@memoryType" selected="@(ViewBag.SelectedType == memoryType)">
                                            @GetMemoryTypeDisplayName(memoryType)
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="tags">Tags (separados por comas)</label>
                                <input type="text" class="form-control" id="tags" name="tags" 
                                       value="@ViewBag.SelectedTags" placeholder="ej: content-generation, strategy">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-filter"></i> Filtrar
                                    </button>
                                    <a href="/Memory" class="btn btn-secondary">
                                        <i class="fas fa-times"></i> Limpiar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Lista de Memorias -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    Memorias Guardadas (@Model.Count)
                </h3>
            </div>
            <div class="card-body p-0">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tipo</th>
                                    <th>Contenido</th>
                                    <th>Tags</th>
                                    <th>Relevancia</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var memory in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge badge-@GetMemoryTypeBadgeClass(memory.MemoryType)">
                                                @memory.MemoryTypeDisplayName
                                            </span>
                                        </td>
                                        <td>
                                            <div class="memory-content">
                                                @if (memory.Content?.Length > 100)
                                                {
                                                    <span class="memory-preview">@memory.Content.Substring(0, 100)...</span>
                                                    <button class="btn btn-sm btn-link view-full" data-content="@memory.Content">
                                                        Ver completo
                                                    </button>
                                                }
                                                else
                                                {
                                                    @memory.Content
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            @if (memory.Tags.Any())
                                            {
                                                @foreach (var tag in memory.Tags.Take(3))
                                                {
                                                    <span class="badge badge-secondary">@tag</span>
                                                }
                                                @if (memory.Tags.Count > 3)
                                                {
                                                    <span class="badge badge-secondary">+@(memory.Tags.Count - 3)</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="progress progress-xs">
                                                <div class="progress-bar bg-@GetRelevanceColor(memory.RelevanceScore)" 
                                                     style="width: @(memory.RelevanceScore * 10)%"></div>
                                            </div>
                                            <small>@memory.RelevanceScore/10</small>
                                        </td>
                                        <td>
                                            <small>@memory.MemoryDate.ToString("dd/MM/yyyy HH:mm")</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-5">
                        <i class="fas fa-inbox fa-3x mb-3"></i>
                        <p>No hay memorias guardadas aún.</p>
                        <p class="small">Las memorias se crean automáticamente cuando interactúas con el sistema.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<!-- Modal para ver contenido completo -->
<div class="modal fade" id="memoryModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Contenido Completo de la Memoria</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="memoryFullContent"></div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetMemoryTypeDisplayName(string type)
    {
        return type switch
        {
            "Conversation" => "Conversación",
            "Decision" => "Decisión",
            "Learning" => "Aprendizaje",
            "Feedback" => "Feedback",
            "Pattern" => "Patrón",
            "Preference" => "Preferencia",
            _ => type
        };
    }

    string GetMemoryTypeBadgeClass(string type)
    {
        return type switch
        {
            "Conversation" => "info",
            "Decision" => "primary",
            "Learning" => "success",
            "Feedback" => "warning",
            "Pattern" => "secondary",
            "Preference" => "info",
            _ => "secondary"
        };
    }

    string GetRelevanceColor(int score)
    {
        return score switch
        {
            >= 8 => "success",
            >= 6 => "info",
            >= 4 => "warning",
            _ => "danger"
        };
    }
}

@section Scripts {
<script>
    $(document).ready(function() {
        $('.view-full').on('click', function() {
            var content = $(this).data('content');
            $('#memoryFullContent').text(content);
            $('#memoryModal').modal('show');
        });
    });
</script>
}

