@{
    ViewData["Title"] = "Cargar Imágenes y Videos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Seleccionar Archivos</h3>
            </div>
            <div class="card-body">
                <form id="uploadForm" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="files">Seleccionar imágenes o videos</label>
                        <div class="custom-file">
                            <input type="file" 
                                   class="custom-file-input" 
                                   id="fileInput" 
                                   name="files" 
                                   multiple 
                                   accept="image/*,video/*">
                            <label class="custom-file-label" for="fileInput">Elegir archivos...</label>
                        </div>
                        <small class="form-text text-muted">
                            Formatos permitidos: JPG, PNG, GIF, WEBP (imágenes) | MP4, MPEG, MOV, AVI, WEBM (videos)
                            <br>Tamaño máximo por archivo: 100 MB
                        </small>
                    </div>

                    <div class="form-group">
                        <label for="description">Descripción (opcional)</label>
                        <textarea class="form-control" id="description" name="description" rows="3" placeholder="Descripción del contenido..."></textarea>
                    </div>

                    <div class="form-group">
                        <label for="tags">Tags (opcional)</label>
                        <input type="text" class="form-control" id="tags" name="tags" placeholder="tag1, tag2, tag3">
                        <small class="form-text text-muted">Separe los tags con comas</small>
                    </div>

                    <div class="form-group">
                        <label for="campaignId">Campaña (opcional)</label>
                        <select class="form-control" id="campaignId" name="campaignId">
                            <option value="">-- Sin campaña --</option>
                            <!-- TODO: Cargar campañas dinámicamente -->
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary" id="uploadBtn" disabled>
                        <i class="fas fa-upload"></i> Cargar Archivos
                    </button>
                    <button type="button" class="btn btn-secondary" id="clearBtn" style="display: none;">
                        <i class="fas fa-times"></i> Limpiar Selección
                    </button>
                </form>
            </div>
        </div>

        <!-- Vista Previa -->
        <div class="card mt-4" id="previewCard" style="display: none;">
            <div class="card-header">
                <h3 class="card-title">Vista Previa</h3>
            </div>
            <div class="card-body">
                <div id="previewContainer" class="row">
                    <!-- Las vistas previas se agregarán aquí dinámicamente -->
                </div>
            </div>
        </div>

        <!-- Progreso de Carga -->
        <div class="card mt-4" id="progressCard" style="display: none;">
            <div class="card-header">
                <h3 class="card-title">Cargando Archivos...</h3>
            </div>
            <div class="card-body">
                <div class="progress mb-3">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" 
                         role="progressbar" 
                         style="width: 0%" 
                         id="progressBar">
                        0%
                    </div>
                </div>
                <div id="uploadStatus"></div>
            </div>
        </div>

        <!-- Resultados -->
        <div class="card mt-4" id="resultsCard" style="display: none;">
            <div class="card-header">
                <h3 class="card-title">Resultados de la Carga</h3>
            </div>
            <div class="card-body" id="resultsContainer">
                <!-- Los resultados se mostrarán aquí -->
            </div>
        </div>
    </div>
</section>

@section Styles {
<style>
    .file-preview {
        position: relative;
        margin-bottom: 15px;
    }
    .file-preview img, .file-preview video {
        max-width: 100%;
        max-height: 200px;
        border-radius: 4px;
        border: 1px solid #ddd;
    }
    .file-preview .file-info {
        margin-top: 5px;
        font-size: 0.875rem;
        color: #6c757d;
    }
    .file-preview .remove-file {
        position: absolute;
        top: 5px;
        right: 5px;
        background: rgba(220, 53, 69, 0.8);
        color: white;
        border: none;
        border-radius: 50%;
        width: 25px;
        height: 25px;
        cursor: pointer;
    }
    .file-preview .remove-file:hover {
        background: rgba(220, 53, 69, 1);
    }
</style>
}

@section Scripts {
<script src="~/js/content-upload.js"></script>
}

