@model List<AutonomousMarketingPlatform.Application.DTOs.ContentListItemDto>
@{
    ViewData["Title"] = "Contenido";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var campaignId = ViewBag.CampaignId as Guid?;
    var contentType = ViewBag.ContentType as string;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><i class="fas fa-images mr-2"></i>Contenido</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item active">Contenido</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Lista de Contenido</h3>
                        <div class="card-tools">
                            <a href="@Url.Action("Upload")" class="btn btn-primary btn-sm">
                                <i class="fas fa-upload"></i> Cargar Archivos
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model != null && Model.Any())
                        {
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-md-3 mb-4">
                                        <div class="card">
                                            @if (item.ContentType == "Image")
                                            {
                                                <img src="@item.FileUrl" class="card-img-top" alt="@item.OriginalFileName" style="height: 200px; object-fit: cover;" onerror="this.src='/images/placeholder.png'">
                                            }
                                            else if (item.ContentType == "Video")
                                            {
                                                <video class="card-img-top" style="height: 200px; object-fit: cover;" controls>
                                                    <source src="@item.FileUrl" type="@item.MimeType">
                                                    Tu navegador no soporta videos.
                                                </video>
                                            }
                                            <div class="card-body">
                                                <h6 class="card-title">@item.OriginalFileName</h6>
                                                <p class="card-text">
                                                    <small class="text-muted">
                                                        @if (item.FileSize.HasValue)
                                                        {
                                                            var sizeMB = item.FileSize.Value / (1024.0 * 1024.0);
                                                            <span>@sizeMB.ToString("F2") MB</span>
                                                        }
                                                        <br>
                                                        <span class="badge badge-@(item.ContentType == "Image" ? "info" : "warning")">@item.ContentType</span>
                                                        @if (item.IsAiGenerated)
                                                        {
                                                            <span class="badge badge-success">IA</span>
                                                        }
                                                    </small>
                                                </p>
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    <p class="card-text">@item.Description</p>
                                                }
                                            </div>
                                            <div class="card-footer">
                                                <small class="text-muted">
                                                    @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> No hay contenido cargado a√∫n.
                                <a href="@Url.Action("Upload")" class="alert-link">Cargar archivos</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


