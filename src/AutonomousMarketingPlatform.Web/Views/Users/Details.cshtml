@model AutonomousMarketingPlatform.Application.DTOs.UserDto
@{
    ViewData["Title"] = "Detalle de Usuario";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="fas fa-user mr-2"></i>@Model.FullName</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Usuarios</a></li>
                        <li class="breadcrumb-item active">Detalle</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="row">
                <!-- Información Principal -->
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-info-circle mr-2"></i>Información General
                            </h3>
                            <div class="card-tools">
                                @{
                                    var statusClass = Model.IsActive ? "badge-success" : "badge-danger";
                                    var statusText = Model.IsActive ? "Activo" : "Inactivo";
                                }
                                <span class="badge @statusClass badge-lg">@statusText</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Email:</dt>
                                <dd class="col-sm-9">@Model.Email</dd>

                                <dt class="col-sm-3">Nombre Completo:</dt>
                                <dd class="col-sm-9">@Model.FullName</dd>

                                <dt class="col-sm-3">Tenant:</dt>
                                <dd class="col-sm-9">@Model.TenantName</dd>

                                <dt class="col-sm-3">Roles:</dt>
                                <dd class="col-sm-9">
                                    @foreach (var role in Model.Roles)
                                    {
                                        <span class="badge badge-primary mr-1">@role</span>
                                    }
                                    @if (!Model.Roles.Any())
                                    {
                                        <span class="text-muted">Sin roles asignados</span>
                                    }
                                </dd>

                                <dt class="col-sm-3">Estado:</dt>
                                <dd class="col-sm-9">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge badge-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Inactivo</span>
                                    }
                                </dd>

                                <dt class="col-sm-3">Fecha de Creación:</dt>
                                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                                @if (Model.LastLoginAt.HasValue)
                                {
                                    <dt class="col-sm-3">Último Acceso:</dt>
                                    <dd class="col-sm-9">
                                        @Model.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")
                                        @if (!string.IsNullOrEmpty(Model.LastLoginIp))
                                        {
                                            <span class="text-muted">(@Model.LastLoginIp)</span>
                                        }
                                    </dd>
                                }
                                else
                                {
                                    <dt class="col-sm-3">Último Acceso:</dt>
                                    <dd class="col-sm-9"><span class="text-muted">Nunca</span></dd>
                                }

                                @if (Model.LockoutEndDate.HasValue && Model.LockoutEndDate.Value > DateTime.UtcNow)
                                {
                                    <dt class="col-sm-3">Bloqueado hasta:</dt>
                                    <dd class="col-sm-9">
                                        <span class="badge badge-warning">
                                            @Model.LockoutEndDate.Value.ToString("dd/MM/yyyy HH:mm")
                                        </span>
                                    </dd>
                                }

                                @if (Model.FailedLoginAttempts > 0)
                                {
                                    <dt class="col-sm-3">Intentos Fallidos:</dt>
                                    <dd class="col-sm-9">
                                        <span class="badge badge-warning">@Model.FailedLoginAttempts</span>
                                    </dd>
                                }
                            </dl>
                        </div>
                        <div class="card-footer">
                            <form asp-action="ToggleActive" method="post" style="display: inline;" 
                                  onsubmit="return confirm('¿Está seguro de que desea @(Model.IsActive ? "desactivar" : "activar") este usuario?');">
                                <input type="hidden" name="id" value="@Model.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn @(Model.IsActive ? "btn-warning" : "btn-success")">
                                    <i class="fas fa-@(Model.IsActive ? "ban" : "check") mr-1"></i>
                                    @(Model.IsActive ? "Desactivar" : "Activar") Usuario
                                </button>
                            </form>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left mr-1"></i>Volver a la Lista
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Estadísticas -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-chart-bar mr-2"></i>Información de Seguridad</h3>
                        </div>
                        <div class="card-body">
                            <div class="info-box mb-3">
                                <span class="info-box-icon bg-info"><i class="fas fa-shield-alt"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Estado de Cuenta</span>
                                    <span class="info-box-number">
                                        @if (Model.IsActive)
                                        {
                                            <span class="text-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Inactivo</span>
                                        }
                                    </span>
                                </div>
                            </div>

                            <div class="info-box mb-3">
                                <span class="info-box-icon bg-warning"><i class="fas fa-exclamation-triangle"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Intentos Fallidos</span>
                                    <span class="info-box-number">@Model.FailedLoginAttempts</span>
                                </div>
                            </div>

                            @if (Model.LockoutEndDate.HasValue && Model.LockoutEndDate.Value > DateTime.UtcNow)
                            {
                                <div class="info-box mb-3">
                                    <span class="info-box-icon bg-danger"><i class="fas fa-lock"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Bloqueado hasta</span>
                                        <span class="info-box-number" style="font-size: 0.9rem;">
                                            @Model.LockoutEndDate.Value.ToString("dd/MM/yyyy HH:mm")
                                        </span>
                                    </div>
                                </div>
                            }

                            @if (Model.LastLoginAt.HasValue)
                            {
                                <div class="info-box mb-3">
                                    <span class="info-box-icon bg-success"><i class="fas fa-sign-in-alt"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Último Acceso</span>
                                        <span class="info-box-number" style="font-size: 0.9rem;">
                                            @Model.LastLoginAt.Value.ToString("dd/MM/yyyy")
                                        </span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}

