@model AutonomousMarketingPlatform.Application.DTOs.CreateUserDto
@using AutonomousMarketingPlatform.Application.DTOs
@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isSuperAdmin = User.HasClaim("IsSuperAdmin", "true");
    var tenants = ViewBag.Tenants as List<TenantDto> ?? new List<TenantDto>();
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="fas fa-user-plus mr-2"></i>Crear Usuario</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Usuarios</a></li>
                        <li class="breadcrumb-item active">Crear</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-info-circle mr-2"></i>Información del Usuario</h3>
                        </div>
                        <form asp-action="Create" asp-controller="Users" method="post" id="createUserForm" enctype="application/x-www-form-urlencoded">
                            <div class="card-body">
                                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                                <div class="form-group">
                                    <label asp-for="Email">Email <span class="text-danger">*</span></label>
                                    <input asp-for="Email" name="Email" id="Email" class="form-control" type="email" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Password">Contraseña <span class="text-danger">*</span></label>
                                    <input asp-for="Password" name="Password" id="Password" class="form-control" type="password" required />
                                    <small class="form-text text-muted">
                                        Mínimo 8 caracteres, debe incluir mayúsculas, minúsculas, números y caracteres especiales
                                    </small>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ConfirmPassword">Confirmar Contraseña <span class="text-danger">*</span></label>
                                    <input asp-for="ConfirmPassword" name="ConfirmPassword" id="ConfirmPassword" class="form-control" type="password" required />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="FullName">Nombre Completo <span class="text-danger">*</span></label>
                                    <input asp-for="FullName" name="FullName" id="FullName" class="form-control" required />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                @if (isSuperAdmin)
                                {
                                    <div class="form-group">
                                        <label asp-for="TenantId">Tenant <span class="text-danger">*</span></label>
                                        <select asp-for="TenantId" name="TenantId" id="TenantId" class="form-control" required>
                                            <option value="">-- Seleccione un Tenant --</option>
                                            @foreach (var tenant in tenants)
                                            {
                                                <option value="@tenant.Id">@tenant.Name @(tenant.Subdomain != null ? $"({tenant.Subdomain})" : "")</option>
                                            }
                                        </select>
                                        <span asp-validation-for="TenantId" class="text-danger"></span>
                                    </div>
                                }
                                else
                                {
                                    @if (Model.TenantId == Guid.Empty)
                                    {
                                        <div class="alert alert-warning">
                                            <i class="fas fa-exclamation-triangle mr-1"></i>
                                            No se pudo determinar el tenant. Por favor, contacte al administrador.
                                        </div>
                                    }
                                    else
                                    {
                                        <input type="hidden" asp-for="TenantId" name="TenantId" id="TenantId" value="@Model.TenantId" />
                                    }
                                }

                                <div class="form-group">
                                    <label asp-for="Role">Rol <span class="text-danger">*</span></label>
                                    <select asp-for="Role" name="Role" id="Role" class="form-control" required>
                                        <option value="">-- Seleccione un Rol --</option>
                                        @if (Model.Role == "Marketer" || string.IsNullOrEmpty(Model.Role))
                                        {
                                            <option value="Marketer" selected>Marketer</option>
                                        }
                                        else
                                        {
                                            <option value="Marketer">Marketer</option>
                                        }
                                        @if (Model.Role == "Admin")
                                        {
                                            <option value="Admin" selected>Admin</option>
                                        }
                                        else
                                        {
                                            <option value="Admin">Admin</option>
                                        }
                                        @if (Model.Role == "Owner")
                                        {
                                            <option value="Owner" selected>Owner</option>
                                        }
                                        else
                                        {
                                            <option value="Owner">Owner</option>
                                        }
                                        @if (Model.Role == "Viewer")
                                        {
                                            <option value="Viewer" selected>Viewer</option>
                                        }
                                        else
                                        {
                                            <option value="Viewer">Viewer</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <div class="form-check">
                                        @* 
                                            Patrón estándar para checkboxes en ASP.NET Core:
                                            - Hidden field con value="false" se envía SIEMPRE
                                            - Checkbox con value="true" solo se envía si está marcado
                                            - Si checkbox marcado: Request.Form["IsActive"] = ["false", "true"] → Model Binder toma el último = true
                                            - Si checkbox NO marcado: Request.Form["IsActive"] = ["false"] → Model Binder toma = false
                                        *@
                                        <input type="hidden" name="IsActive" value="false" />
                                        <input asp-for="IsActive" 
                                               name="IsActive" 
                                               id="IsActive" 
                                               class="form-check-input" 
                                               type="checkbox" 
                                               value="true" 
                                               @(Model.IsActive ? "checked" : "") />
                                        <label asp-for="IsActive" class="form-check-label">
                                            Usuario Activo
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save mr-1"></i>Crear Usuario
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-times mr-1"></i>Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-info-circle mr-2"></i>Información</h3>
                        </div>
                        <div class="card-body">
                            <h5>Roles Disponibles:</h5>
                            <ul>
                                <li><strong>Owner:</strong> Dueño del tenant, acceso total</li>
                                <li><strong>Admin:</strong> Administrador del tenant</li>
                                <li><strong>Marketer:</strong> Puede crear/editar campañas</li>
                                <li><strong>Viewer:</strong> Solo lectura</li>
                            </ul>
                            <hr>
                            <h5>Requisitos de Contraseña:</h5>
                            <ul>
                                <li>Mínimo 8 caracteres</li>
                                <li>Al menos una mayúscula</li>
                                <li>Al menos una minúscula</li>
                                <li>Al menos un número</li>
                                <li>Al menos un carácter especial</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        jQuery(document).ready(function() {
            var form = jQuery('#createUserForm');
            var submitButton = form.find('button[type="submit"]');
            
            // Capturar click del botón
            submitButton.on('click', function(e) {
                e.preventDefault();
                
                // Capturar datos uno a uno del formulario
                var email = jQuery('#Email').val();
                var password = jQuery('#Password').val();
                var confirmPassword = jQuery('#ConfirmPassword').val();
                var fullName = jQuery('#FullName').val();
                var tenantId = jQuery('#TenantId').val();
                var role = jQuery('#Role').val();
                var isActive = jQuery('#IsActive').is(':checked');
                
                // Construir objeto CreateUserDto
                var createUserDto = {
                    Email: email,
                    Password: password,
                    ConfirmPassword: confirmPassword,
                    FullName: fullName,
                    TenantId: tenantId,
                    Role: role,
                    IsActive: isActive
                };
                
                // Enviar el objeto al controlador usando jQuery AJAX POST
                jQuery.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: createUserDto,
                    success: function(response) {
                        window.location.href = '@Url.Action("Index")';
                    },
                    error: function(xhr) {
                        // Si hay errores, recargar la página para mostrar los errores del servidor
                        document.body.innerHTML = xhr.responseText;
                    }
                });
            });
        });
    </script>
}

