@model AutonomousMarketingPlatform.Application.DTOs.AutomationStatusDto
@{
    ViewData["Title"] = "Automatizaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="fas fa-robot mr-2"></i>Automatizaciones 24/7</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item active">Automatizaciones</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <!-- Estadísticas -->
            <div class="row">
                <div class="col-lg-3 col-6">
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3>@Model.TotalAutomations</h3>
                            <p>Total Automatizaciones</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-robot"></i>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-6">
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>@Model.RunningCount</h3>
                            <p>En Ejecución</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-play-circle"></i>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-6">
                    <div class="small-box bg-warning">
                        <div class="inner">
                            <h3>@Model.PausedCount</h3>
                            <p>Pausadas</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-pause-circle"></i>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-6">
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>@Model.ErrorCount</h3>
                            <p>Con Errores</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lista de Automatizaciones -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-list mr-2"></i>Lista de Automatizaciones</h3>
                        </div>
                        <div class="card-body">
                            @if (Model.ActiveAutomations != null && Model.ActiveAutomations.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Tipo</th>
                                                <th>Estado</th>
                                                <th>Última Ejecución</th>
                                                <th>Próxima Ejecución</th>
                                                <th>Rendimiento</th>
                                                <th>Errores</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var automation in Model.ActiveAutomations)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@GetAutomationTypeName(automation.AutomationType)</strong>
                                                    </td>
                                                    <td>
                                                        <span class="badge badge-@GetStatusBadgeClass(automation.Status)">
                                                            @automation.Status
                                                        </span>
                                                    </td>
                                                    <td>
                                                        @if (automation.LastExecutionAt.HasValue)
                                                        {
                                                            @automation.LastExecutionAt.Value.ToString("dd/MM/yyyy HH:mm")
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">Nunca</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (automation.NextExecutionAt.HasValue)
                                                        {
                                                            @automation.NextExecutionAt.Value.ToString("dd/MM/yyyy HH:mm")
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (automation.SuccessCount + automation.FailureCount > 0)
                                                        {
                                                            var total = automation.SuccessCount + automation.FailureCount;
                                                            var successRate = (automation.SuccessCount * 100.0) / total;
                                                            <div class="progress progress-xs">
                                                                <div class="progress-bar bg-success" style="width: @successRate%"></div>
                                                            </div>
                                                            <small>@automation.SuccessCount/@total (@successRate.ToString("F0")%)</small>
                                                        }
                                                        else
                                                        {
                                                            <small class="text-muted">Sin datos</small>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(automation.LastError))
                                                        {
                                                            <span class="badge badge-danger" title="@automation.LastError">
                                                                <i class="fas fa-exclamation-circle"></i> Error
                                                            </span>
                                                        }
                                                        else if (automation.FailureCount > 0)
                                                        {
                                                            <span class="badge badge-warning">
                                                                @automation.FailureCount fallos
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle mr-2"></i>No hay automatizaciones configuradas.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.NextExecution.HasValue)
            {
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-info">
                            <i class="fas fa-clock mr-2"></i>
                            <strong>Próxima ejecución programada:</strong> 
                            @Model.NextExecution.Value.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

@functions {
    string GetAutomationTypeName(string automationType)
    {
        return automationType switch
        {
            "ContentGeneration" => "Generación de Contenido",
            "Publishing" => "Publicación",
            "Analytics" => "Análisis",
            "StrategyUpdate" => "Actualización de Estrategia",
            _ => automationType
        };
    }

    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Running" => "success",
            "Paused" => "warning",
            "Completed" => "info",
            "Error" => "danger",
            "Scheduled" => "primary",
            _ => "secondary"
        };
    }
}

@section Scripts {
    <script>
        $(function () {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}

