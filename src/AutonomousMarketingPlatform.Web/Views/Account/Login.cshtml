@model AutonomousMarketingPlatform.Application.DTOs.LoginDto
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_AuthLayout";
}

<div class="auth-card">
    <!-- Header -->
    <div class="auth-header">
        <h1 class="auth-title">Autonomous Marketing</h1>
        <p class="auth-subtitle">Inicia sesión en tu cuenta</p>
    </div>

    <!-- Tenant Badge (discreto) -->
    @if (!string.IsNullOrEmpty(ViewData["TenantId"]?.ToString()))
    {
        <div class="tenant-badge">
            <span class="badge-text">Tenant: @ViewData["TenantId"]</span>
        </div>
    }

    <!-- Alerts -->
    @if (ViewData["LockoutEnd"] != null)
    {
        <div class="alert alert-warning">
            <strong>Cuenta bloqueada</strong><br>
            Tu cuenta ha sido bloqueada temporalmente hasta: @(((DateTime?)ViewData["LockoutEnd"])?.ToString("g"))
        </div>
    }
    
    @if (ViewData["RemainingAttempts"] != null && (int)ViewData["RemainingAttempts"]! < 5)
    {
        <div class="alert alert-warning">
            <strong>Atención</strong><br>
            Intentos restantes: @ViewData["RemainingAttempts"]
        </div>
    }
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <!-- Login Form -->
    <form asp-action="Login" asp-controller="Account" method="post" id="loginForm" class="auth-form">
        
        @if (ViewData["TenantId"] != null)
        {
            <input type="hidden" asp-for="TenantId" name="TenantId" value="@ViewData["TenantId"]" />
        }
        else
        {
            <input type="hidden" asp-for="TenantId" name="TenantId" value="" />
        }
        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
        
        <!-- Email Field -->
        <div class="form-field">
            <label for="Email" class="form-label">Correo electrónico</label>
            <input 
                asp-for="Email" 
                name="Email"
                id="Email"
                type="email" 
                class="form-control" 
                placeholder="tu@email.com" 
                required 
                autocomplete="email"
                autofocus>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <!-- Password Field -->
        <div class="form-field">
            <label for="Password" class="form-label">Contraseña</label>
            <input 
                asp-for="Password" 
                name="Password"
                id="Password"
                type="password" 
                class="form-control" 
                placeholder="••••••••" 
                required 
                autocomplete="current-password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        
        <!-- Remember Me -->
        <div class="form-field">
            <div class="form-check">
                <input type="checkbox" asp-for="RememberMe" name="RememberMe" id="remember" value="true" class="form-check-input">
                <label for="remember" class="form-check-label">Recordarme</label>
            </div>
        </div>
        
        <!-- Submit Button -->
        <div class="form-field">
            <button type="submit" class="btn btn-primary btn-block" id="loginBtn">
                Iniciar sesión
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        (function() {
            'use strict';
            
            const form = document.getElementById('loginForm');
            const submitBtn = document.getElementById('loginBtn');
            
            if (form && submitBtn) {
                form.addEventListener('submit', function(e) {
                    if (form.checkValidity()) {
                        submitBtn.disabled = true;
                        submitBtn.textContent = 'Validando...';
                    } else {
                        e.preventDefault();
                    }
                });
            }
        })();
    </script>
}
