@model AutonomousMarketingPlatform.Application.DTOs.MarketingPackDto
@{
    ViewData["Title"] = "Marketing Pack Generado";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-robot mr-2"></i>Marketing Pack Generado
                            </h3>
                        </div>
                        <div class="card-body">
                            @if (Model != null)
                            {
                                <!-- Estrategia -->
                                <div class="mb-4">
                                    <h4><i class="fas fa-lightbulb mr-2"></i>Estrategia de Marketing</h4>
                                    <div class="p-3 bg-light rounded">
                                        <pre style="white-space: pre-wrap; font-family: inherit;">@Model.Strategy</pre>
                                    </div>
                                </div>

                                <!-- Copies Generados -->
                                <div class="mb-4">
                                    <h4><i class="fas fa-file-alt mr-2"></i>Copies Generados</h4>
                                    @foreach (var copy in Model.Copies)
                                    {
                                        <div class="card mb-3">
                                            <div class="card-header">
                                                <strong>@copy.CopyType</strong>
                                                @if (!string.IsNullOrEmpty(copy.SuggestedChannel))
                                                {
                                                    <span class="badge badge-info float-right">@copy.SuggestedChannel</span>
                                                }
                                            </div>
                                            <div class="card-body">
                                                <p>@copy.Content</p>
                                                @if (!string.IsNullOrEmpty(copy.Hashtags))
                                                {
                                                    <div class="mt-2">
                                                        <strong>Hashtags:</strong>
                                                        <div class="mt-1">
                                                            @foreach (var hashtag in copy.Hashtags.Split(' '))
                                                            {
                                                                <span class="badge badge-secondary">#@hashtag</span>
                                                            }
                                                        </div>
                                                    </div>
                                                }
                                                @if (copy.PublicationChecklist != null && copy.PublicationChecklist.Any())
                                                {
                                                    <div class="mt-3">
                                                        <strong>Checklist de Publicación:</strong>
                                                        <ul class="mt-2">
                                                            @foreach (var item in copy.PublicationChecklist.Values)
                                                            {
                                                                <li>@item</li>
                                                            }
                                                        </ul>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>

                                <!-- Prompts para Assets -->
                                <div class="mb-4">
                                    <h4><i class="fas fa-image mr-2"></i>Prompts para Assets</h4>
                                    @foreach (var prompt in Model.AssetPrompts)
                                    {
                                        <div class="card mb-3">
                                            <div class="card-header">
                                                <strong>@prompt.AssetType</strong>
                                                @if (!string.IsNullOrEmpty(prompt.SuggestedChannel))
                                                {
                                                    <span class="badge badge-primary float-right">@prompt.SuggestedChannel</span>
                                                }
                                            </div>
                                            <div class="card-body">
                                                <div class="mb-2">
                                                    <strong>Prompt:</strong>
                                                    <p class="mt-1">@prompt.Prompt</p>
                                                </div>
                                                @if (!string.IsNullOrEmpty(prompt.NegativePrompt))
                                                {
                                                    <div>
                                                        <strong>Negative Prompt:</strong>
                                                        <p class="mt-1 text-muted">@prompt.NegativePrompt</p>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>

                                <!-- Campaign Draft -->
                                @if (Model.CampaignDraft != null)
                                {
                                    <div class="mb-4">
                                        <h4><i class="fas fa-drafting-compass mr-2"></i>Borrador de Campaña</h4>
                                        <div class="card">
                                            <div class="card-body">
                                                <h5>@Model.CampaignDraft.Name</h5>
                                                @if (!string.IsNullOrEmpty(Model.CampaignDraft.Description))
                                                {
                                                    <p>@Model.CampaignDraft.Description</p>
                                                }
                                                <div class="mt-3">
                                                    <span class="badge badge-@(Model.CampaignDraft.Status == "Draft" ? "warning" : "success")">
                                                        @Model.CampaignDraft.Status
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle mr-2"></i>
                                    Marketing Pack no encontrado o no disponible.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

